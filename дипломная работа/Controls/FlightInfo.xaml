<UserControl x:Class="дипломная_работа.Controls.FlightInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:дипломная_работа.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="ArDate" Grid.Column="8" Grid.Row="4" />
        <TextBlock x:Name="ArPlace" Grid.Column="10" Grid.Row="6" />
        <TextBlock x:Name="DepDate" Grid.Column="0" Grid.Row="0" />
        <TextBlock x:Name="DepPlace" Grid.Column="2" Grid.Row="2" />
    </Grid>
</UserControl>
