<UserControl x:Class="дипломная_работа.Controls.HotelInfoMini"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:дипломная_работа.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="75"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Name" FontFamily="Calibri" FontSize="14" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock x:Name="Price" Grid.Row="1" FontFamily="Calibri" FontSize="14" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Image x:Name="stars" Grid.Column="1" Grid.RowSpan="2"/>
    </Grid>
</UserControl>

