<Page x:Class="дипломная_работа.InitialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:дипломная_работа"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="InitialPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="backgroundImage" Stretch="UniformToFill"  Grid.RowSpan="3" Grid.ColumnSpan="3"/>
        <ProgressBar x:Name ="progressBar"  Grid.Column="1" Grid.Row="1" ValueChanged="progressBar_ValueChanged" Minimum="0" Maximum="100" Foreground="#997E7E7E" Background="#99FFFFFF"/>
    </Grid>
</Page>
